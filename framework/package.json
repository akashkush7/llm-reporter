{
  "name": "@aganitha/report-framework",
  "version": "1.0.2",
  "pnpm": {
    "overrides": {
      "estree-walker": "^3.0.3",
      "estree-util-build-jsx": "^3.0.1"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "estree-walker"
      ]
    }
  },
  "resolutions": {
    "estree-walker": "3.0.3"
  },
  "description": "Core framework for LLM-powered report generation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core-only.d.ts",
      "import": "./dist/core-only.js",
      "default": "./dist/core-only.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "default": "./dist/types.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "core": [
        "./dist/core-only.d.ts"
      ],
      "types": [
        "./dist/types.d.ts"
      ]
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "llm",
    "reports",
    "framework",
    "ai"
  ],
  "author": "Akash",
  "dependencies": {
    "@ai-sdk/google": "^1.0.9",
    "@ai-sdk/openai": "^1.0.13",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "ai": "^4.1.11",
    "csv-parse": "^6.1.0",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.300.0",
    "marked": "^14.1.3",
    "next-mdx-remote": "^5.0.0",
    "nunjucks": "^3.2.4",
    "playwright": "^1.48.2",
    "pptxgenjs": "^3.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.10.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tsx": "^4.21.0",
    "xml2js": "^0.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/nunjucks": "^3.2.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/xml2js": "^0.4.14",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
