{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": false,
    "declaration": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["scripts/**/*", "workers/**/*", "lib/**/*"],
  "exclude": ["node_modules", ".next", "dist", "app", "components"]
}
